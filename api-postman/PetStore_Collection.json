{
	"info": {
		"_postman_id": "8b5c92c5-7f3c-4d32-9b24-8f65342a78f9",
		"name": "Petstore API Tests",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Add a new pet",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"var jsonData = pm.response.json();",
							"",
							"// FIX: Handle 64-bit integers by extracting id as string using regex",
							"// JavaScript numbers lose precision for values > 2^53",
							"var responseText = pm.response.text();",
							"var idMatch = responseText.match(/\"id\":\\s*(\\d+)/);",
							"if (idMatch && idMatch[1]) {",
							"    pm.collectionVariables.set(\"petId\", idMatch[1]);",
							"} else {",
							"    // Fallback",
							"    pm.collectionVariables.set(\"petId\", jsonData.id);",
							"}",
							"",
							"pm.test(\"Pet name is correct\", function () {",
							"    pm.expect(jsonData.name).to.eql(\"Leo\");",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"id\": 0,\n  \"category\": {\n    \"id\": 0,\n    \"name\": \"Dogs\"\n  },\n  \"name\": \"Leo\",\n  \"photoUrls\": [\n    \"string\"\n  ],\n  \"tags\": [\n    {\n      \"id\": 0,\n      \"name\": \"Golden\"\n    }\n  ],\n  \"status\": \"available\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "https://petstore.swagger.io/v2/pet",
					"protocol": "https",
					"host": [
						"petstore",
						"swagger",
						"io"
					],
					"path": [
						"v2",
						"pet"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get pet by ID",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"var jsonData = pm.response.json();",
							"pm.test(\"Verify pet ID\", function () {",
							"    pm.expect(jsonData.id).to.eql(pm.collectionVariables.get(\"petId\"));",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "https://petstore.swagger.io/v2/pet/{{petId}}",
					"protocol": "https",
					"host": [
						"petstore",
						"swagger",
						"io"
					],
					"path": [
						"v2",
						"pet",
						"{{petId}}"
					]
				}
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "petId",
			"value": ""
		}
	]
}